@using WebBanSachMVC.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2 style="color:green">Giỏ hàng của bạn</h2>
<table border="1">
    <tr>
        <td>Mã sách</td>

        <td>Tên sách</td>

        <td>Ảnh sách</td>

        <td>Đơn giá</td>

        <td>Số lượng</td>

        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSP</td>

            <td>@item.TenSP</td>

            <td><img src="@Url.Content("~/Hinhsanpham/" + @item.HinhAnh)" width="50" height="50" /></td>

            <td>@String.Format("{0:0,0.0}", @item.DonGia) VND</td>

            <td>@item.SoLuong</td>

            <td>@String.Format("{0:0,0}", @item.ThanhTien)VND</td>
            
        </tr>
    }
    <tr style="color:blue"><td>@Html.ActionLink("Chỉnh sửa giỏ hàng","SuaGioHang")</td></tr>
    

</table>