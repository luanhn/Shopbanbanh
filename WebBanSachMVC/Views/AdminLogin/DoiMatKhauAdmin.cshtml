@model WebBanSachMVC.Models.Admin

@{
    ViewBag.Title = "DoiMatKhauAdmin";
    Layout = "~/Views/Layout/AdminQuanLy.cshtml";
}

<link href="~/AdminCss/bootstrap.min.css" rel="stylesheet" />
<link href="~/AdminCss/metisMenu.min.css" rel="stylesheet" />
<link href="~/AdminCss/sb-admin-2.css" rel="stylesheet" />

<link href="~/AdminCss/font-awesome.min.css" rel="stylesheet" />
<div id="page-wrapper">
    <h3>Đổi mật khẩu quản trị viên</h3>
@using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.TextBox("txtmkcu", null, new { @class = "form-control", placeholder = "Mật khẩu cũ" })

                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>




        <div class="form-group">
           
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu mới" })

                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>

        @ViewBag.tbl

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
                @Html.ActionLink("Trở về", "Index","QuanLySanPham")
            </div>
        </div>
    </div>
    }

        
        <script src="~/AdminJS/jquery.min.js"></script>
        <script src="~/AdminJS/bootstrap.min.js"></script>
        <script src="~/AdminJS/metisMenu.min.js"></script>
        <script src="~/AdminJS/sb-admin-2.js"></script>
    </div>
