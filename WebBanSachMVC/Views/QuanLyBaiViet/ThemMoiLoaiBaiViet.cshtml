@model WebBanSachMVC.Models.LoaiBaiViet

@{
    ViewBag.Title = "ThemMoiLoaiBaiViet";
    Layout = "~/Views/Layout/AdminQuanLy.cshtml";
}

<link href="~/AdminCss/bootstrap.min.css" rel="stylesheet" />
<link href="~/AdminCss/metisMenu.min.css" rel="stylesheet" />
<link href="~/AdminCss/sb-admin-2.css" rel="stylesheet" />
<script src="~/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
<script src="~/tinymce/js/tinymce/tinymce.min.js"></script>

<link href="~/AdminCss/font-awesome.min.css" rel="stylesheet" />


<script>tinymce.init({ selector: 'textarea' });</script>
<div id="page-wrapper">
    <h3>Thêm loại bài viết mới</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)


            @ViewBag.ThongbaoOK


            <div class="form-group">
                <label for="inputPassword3" class="col-sm-4 control-label">Tên loại</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TenLoaiBV, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TenLoaiBV)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-default" /> |
                    @Html.ActionLink("Trở về", "QLDSCacBaiViet")
                </div>
            </div>
        </div>
    }


    <script src="~/AdminJS/jquery.min.js"></script>
    <script src="~/AdminJS/bootstrap.min.js"></script>
    <script src="~/AdminJS/metisMenu.min.js"></script>
    <script src="~/AdminJS/sb-admin-2.js"></script>
</div>