@model WebBanSachMVC.Models.LoaiBanh

@{
    ViewBag.Title = "XoaLoaiBanh";
    Layout = "~/Views/Layout/AdminQuanLy.cshtml";
}

<link href="~/AdminCss/bootstrap.min.css" rel="stylesheet" />
<link href="~/AdminCss/metisMenu.min.css" rel="stylesheet" />
<link href="~/AdminCss/sb-admin-2.css" rel="stylesheet" />

<link href="~/AdminCss/font-awesome.min.css" rel="stylesheet" />
<div id="page-wrapper">
    <h3>Bạn có muốn xóa loại bánh này?</h3>


    <div class="form-group">
        <label for="inputPassword3" class="col-sm-4 control-label">Mã loại</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.MaLoai, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaLoai)
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-4 control-label">Tên loại</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TenLoai, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenLoai)
        </div>
    </div>

    <div class="form-group">
        <label for="inputPassword3" class="col-sm-4 control-label">Mô tả</label>
        <div class="col-md-10">
            @*@Html.TextBoxFor(model => model.MoTa, null, new { @class = "form-control" })*@
            
            @Html.TextArea("MoTa", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MoTa) <br />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-10">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" /> |
                    @Html.ActionLink("Trở về", "LoaiBanh")
                </div>
            }

        </div>
    </div>

    <script src="~/AdminJS/jquery.min.js"></script>
    <script src="~/AdminJS/bootstrap.min.js"></script>
    <script src="~/AdminJS/metisMenu.min.js"></script>
    <script src="~/AdminJS/sb-admin-2.js"></script>
</div>