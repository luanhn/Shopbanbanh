






@model WebBanSachMVC.Models.DanhsachBanh

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Views/Layout/AdminQuanLy.cshtml";
}
<link href="~/AdminCss/bootstrap.min.css" rel="stylesheet" />
<link href="~/AdminCss/metisMenu.min.css" rel="stylesheet" />
<link href="~/AdminCss/sb-admin-2.css" rel="stylesheet" />
<script src="~/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
<script src="~/tinymce/js/tinymce/tinymce.min.js"></script>

<link href="~/AdminCss/font-awesome.min.css" rel="stylesheet" />


<script>tinymce.init({ selector: 'textarea' });</script>
<div id="page-wrapper">
    <h3>Thêm bánh mới</h3>
                           
                                @using (Html.BeginForm("ThemMoi", "QuanLySanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)


        @ViewBag.ThongbaoOK
       

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Tên bánh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenSP, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenSP)
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Đơn giá</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DonGia, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DonGia)
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Đơn vị tính</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DonViTinh, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DonViTinh)
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Tên loại </label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MaLoai, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoai)
            </div>
        </div>
        
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Hình ảnh</label>
            <div class="col-md-10">
                @*ten cua the input phai trung ten voi tham so ben controller*@
                <input type="file" name="fileUpload" class="form-control"/>
                @*thong bao trung anh? da co roi*@
                @ViewBag.ThongBao
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Mô tả bánh </label>
            <div class="col-md-10">
                <textarea name="MoTa"></textarea>
                @Html.ValidationMessageFor(model => model.MoTa)
            </div>
        </div>

     






        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" /> |
                @Html.ActionLink("Trở về", "QLDSBanh")
            </div>
        </div>
    </div>
}
          
                    
    <script src="~/AdminJS/jquery.min.js"></script>
    <script src="~/AdminJS/bootstrap.min.js"></script>
    <script src="~/AdminJS/metisMenu.min.js"></script>
    <script src="~/AdminJS/sb-admin-2.js"></script>
</div>