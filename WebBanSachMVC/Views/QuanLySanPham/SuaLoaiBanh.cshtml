@model WebBanSachMVC.Models.LoaiBanh

@{
    ViewBag.Title = "SuaLoaiBanh";
    Layout = "~/Views/Layout/AdminQuanLy.cshtml";
}

<link href="~/AdminCss/bootstrap.min.css" rel="stylesheet" />
<link href="~/AdminCss/metisMenu.min.css" rel="stylesheet" />
<link href="~/AdminCss/sb-admin-2.css" rel="stylesheet" />

<link href="~/AdminCss/font-awesome.min.css" rel="stylesheet" />
<script src="~/tinymce/js/tinymce/jquery.tinymce.min.js"></script>
<script src="~/tinymce/js/tinymce/tinymce.min.js"></script>




<script>tinymce.init({ selector: 'textarea' });</script>
<div id="page-wrapper">
    <h2>Sửa thông tin loại bánh</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">

                <div class="col-md-10">

                    @Html.Hidden("MaLoai", Model.MaLoai)
                </div>
            </div>

            <div class="form-group">
                <label for="inputPassword3" class="col-sm-4 control-label">Tên loại bánh</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TenLoai, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TenLoai)
                </div>
            </div>

           



          

            <div class="form-group">
                <label for="inputPassword3" class="col-sm-4 control-label">Mô tả</label>
                <div class="col-md-10">
                    <textarea name="MoTa">@Model.MoTa</textarea>
                    @Html.ValidationMessageFor(model => model.MoTa)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" /> |
                    @Html.ActionLink("Trở về", "LoaiBanh")
                </div>
            </div>
        </div>

    }

    <script src="~/AdminJS/jquery.min.js"></script>
    <script src="~/AdminJS/bootstrap.min.js"></script>
    <script src="~/AdminJS/metisMenu.min.js"></script>
    <script src="~/AdminJS/sb-admin-2.js"></script>
</div>