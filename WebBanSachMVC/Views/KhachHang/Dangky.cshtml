@model WebBanSachMVC.Models.KHACHHANG

@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<div class="dk" style="margin-left:100px">
    <h2 style="color:green">Đăng ký thành viên</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true)



            <div class="form-group">
                @Html.LabelFor(model => model.HoTenKH, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTenKH)
                    @Html.ValidationMessageFor(model => model.HoTenKH)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DiaChiKH, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiKH)
                    @Html.ValidationMessageFor(model => model.DiaChiKH)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienThoai)
                    @Html.ValidationMessageFor(model => model.DienThoai)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenDN, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDN)
                    @Html.ValidationMessageFor(model => model.TenDN)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MatKhau)
                    @Html.ValidationMessageFor(model => model.MatKhau)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng ký thành viên" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về Trang chủ", "index","Home")
    </div>
</div>

